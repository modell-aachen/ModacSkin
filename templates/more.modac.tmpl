%TWISTY{
    showlink="%MAKETEXT{"Advanced options..."}%"
    hidelink="%MAKETEXT{"Hide advanced options..."}%"
    showimgleft="%ICONURLPATH{toggleopen-small}%"
    hideimgleft="%ICONURLPATH{toggleclose-small}%"
    remember="off"
    start=hide"
}%
<h3>%MAKETEXT{"Name of copy"}%</h3>
%TMPL:P{"topicname"}%
%TMPL:P{"nonwikiword"}%
%ENDTWISTY%
