<select class="foswikiSelect modacjqWikiWordWeb">%FORMATLIST{"%WEBLIST{"$name$marker" separator=";" webs="public,%WEB%"}%" pattern="(\S*)( selected='selected')?" format="$percentIF{\"'$1' allows 'CHANGE'\" then=\"<option value='$1'$marker>$map($1)</option>\"}$percent" marker="selected='selected' " selection="^%WEB%$" separator=" " split=";" unique="on" map="%MODAC_WEBMAPPINGS{default=""}%" include="%WEB%|(?!%URLPARAM{"MODAC_HIDEWEBS" default="%MODAC_HIDEWEBS{default="dummy"}%"}%$).*"}%</select>
